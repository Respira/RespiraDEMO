<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/imageView"
        android:src="@drawable/respira"
        android:layout_gravity="center_horizontal"

        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="22dp"
        android:text="Words Per Minute Monitoring"/>
    <ToggleButton
        android:id="@+id/toggleButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        />
    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />
    <TextView
        android:id="@+id/monitorring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Words Per Minute"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="0"
        android:textAlignment="center"
        android:id="@+id/Currentratio"
        android:textSize="40dp"
        android:layout_gravity="center_horizontal"/>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The Average ratio gets decided every sentence"
        android:textAlignment="center"
        android:id="@+id/ratio"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"/>
        <ImageView
            android:id="@+id/watchonline"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/ratio"
            android:layout_marginBottom="5dp"
            android:src="@drawable/watch_video_respira"
            />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <ImageView
        android:layout_width="60dp"
        android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
        android:src="@drawable/breath_icon"
            android:layout_alignParentStart="true"
            />
        <ImageView
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:src="@drawable/breath_icon"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:src="@drawable/breath_icon"/>



    </RelativeLayout>


</LinearLayout>